<idea-plugin>
    <id>com.hamoid.openrndrThumbnails</id>
    <name>Thumbnailer</name>
    <vendor>aBe</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow anchor="right" canCloseContents="true" 
                    id="Thumbnailer" 
                    secondary="true"
                    icon="AllIcons.General.Modified"
                    factoryClass="com.hamoid.openrndrThumbnails.form.ThumbsToolWindowFactory" />
        <projectService serviceInterface="com.hamoid.openrndrThumbnails.PluginConfig"
                        serviceImplementation="com.hamoid.openrndrThumbnails.PluginConfig" />
    </extensions>

    <actions>
        <action class="com.hamoid.openrndrThumbnails.action.EditTargetResDirAction" id="EditTargetResDir" />
    </actions>

</idea-plugin>
